<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Inserir_alterar_eliminar.inserir_compras_efetuadas"
    tools:showIn="@layout/activity_inserir_compras_efetuadas">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#F44336">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAlterar_nome_da_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/introduzir_nome_da_categoria" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColorHint="#F44336">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextAlterar_tipo_de_produto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/introduzir_tipo_de_produto" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>